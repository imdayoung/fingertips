<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fingertips.backend.member.mapper.MemberMapper">
    <select id="getMember" parameterType="String" resultType="MemberDTO">
        SELECT * FROM member WHERE member_id = #{username}
    </select>

    <insert id="insertMember" parameterType="MemberDTO">
        INSERT INTO member (member_id, password, birthday, gender, email, role)
        VALUES (#{memberId}, #{password}, #{birthday}, #{gender}, #{email}, #{role})
    </insert>
</mapper>
