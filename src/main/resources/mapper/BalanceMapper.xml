    <select id="getBalance" resultType="BalanceDTO">
        SELECT m.member_id as id, SUM(a.balance) as balance
        FROM member m
                 JOIN account_book a ON m.id = a.member_id
        GROUP BY m.member_id
    </select>



</mapper>
