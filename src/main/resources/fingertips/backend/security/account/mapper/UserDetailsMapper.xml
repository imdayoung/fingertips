<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fingertips.backend.security.account.mapper.UserDetailsMapper">

    <!-- 사용자 정보 조회 쿼리 -->
    <select id="get" parameterType="String" resultType="fingertips.backend.security.account.dto.UserDTO">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <!-- 사용자 등록 쿼리 -->
    <insert id="insert" parameterType="fingertips.backend.security.account.dto.UserDTO">
        INSERT INTO users (username, userId, password, email)
        VALUES (#{username}, #{userId}, #{password}, #{email})
    </insert>

</mapper>
